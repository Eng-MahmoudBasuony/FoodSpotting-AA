<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="food.spotting.eng_mahnoud83coffey.embeatitserver.OrderDetails"
    android:background="@drawable/backgroudtow"
    android:padding="5dp"
    >



    <android.support.v7.widget.CardView
        android:id="@+id/order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        android:layout_margin="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_margin="5dp"
            >

       <TextView
           android:id="@+id/id_order_details"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Order Id"
           android:background="@android:color/transparent"
           android:textSize="15dp"
           />

       <TextView
           android:id="@+id/phone_order_details"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Order Phone"
           android:background="@android:color/transparent"
           android:textSize="15dp"

           />

       <TextView
           android:id="@+id/total_order_details"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="$1000"
           android:background="@android:color/transparent"
           android:textSize="15dp"
           />

       <TextView
           android:id="@+id/address_order_details"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Address Order"
           android:textSize="15dp"
           />

       <TextView
           android:id="@+id/comment_order_details"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Comment Order"
           android:background="@android:color/transparent"
           android:textSize="15dp"
           />
        </LinearLayout>

    </android.support.v7.widget.CardView>



      <TextView
          android:id="@+id/text_Details"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Details"
          android:textSize="20sp"
          android:textColor="@android:color/white"
          android:textStyle="bold"
          android:layout_below="@+id/order_info"
          android:layout_margin="5dp"

          />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_order_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_Details"
       />





</RelativeLayout>
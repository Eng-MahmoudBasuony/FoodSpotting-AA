<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_marginBottom="5dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        >


        <TextView
            android:id="@+id/proudact_name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proudact Name"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            />

        <TextView
            android:id="@+id/proudact_quentity_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Quentity"
            android:textColor="@android:color/black"
            android:layout_marginBottom="3dp"
            />

        <TextView
            android:id="@+id/proudact_Price_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proudact Price"
            android:layout_marginBottom="3dp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/proudact_discount_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proudact Discount"
            android:textColor="@android:color/black"
            android:layout_marginBottom="3dp"
            />

    </LinearLayout>


</android.support.v7.widget.CardView>
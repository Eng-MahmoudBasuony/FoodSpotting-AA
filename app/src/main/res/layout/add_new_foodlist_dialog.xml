<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    >




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:id="@+id/layout_edit_name"
        >


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:theme="@style/TextStyleEditext"

            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editnameDialog_addFoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:inputType="text"
                android:paddingBottom="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:theme="@style/TextStyleEditext"

            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editDescriptionDialog_addFoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Description"
                android:inputType="textMultiLine"
                android:paddingBottom="24dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:theme="@style/TextStyleEditext"

            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editPriceDialog_addFoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Price"
                android:inputType="number"
                android:paddingBottom="24dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:theme="@style/TextStyleEditext"

            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editDiscountDialog_addFoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Discount"
                android:inputType="number"
                android:paddingBottom="24dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp" />
        </android.support.design.widget.TextInputLayout>




        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_below="@+id/layout_edit_name"
            >


            <Button
                android:id="@+id/btnDialog_Select_Foodlist"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/btnsignin"
                android:text="@string/select"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btnDialog_Uplaod_Foodlist"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/btnsignup"
                android:text="@string/Upload"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_margin="5dp"
                android:layout_alignParentBottom="true"
                />


        </LinearLayout>

    </LinearLayout>






</android.support.v7.widget.CardView>